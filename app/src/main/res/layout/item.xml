<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/colorPrimary">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginMed"
        android:layout_marginEnd="@dimen/marginMed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/margimLarge"
        app:strokeWidth="4dp"
        app:cardCornerRadius="0dp"
        app:strokeColor="@color/brightText">

        <ImageView
            android:id="@+id/image_item"
            android:layout_width="@dimen/coverWidth"
            android:layout_height="@dimen/coverHeight"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />

    </com.google.android.material.card.MaterialCardView>



    <TextView
        android:id="@+id/txt_number_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginMin"
        android:fontFamily="@font/roboto"
        android:textColor="@color/brightText"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/materialCardview3"
        app:layout_constraintTop_toBottomOf="@+id/materialCardview3"
        tools:text="# 96" />

</androidx.constraintlayout.widget.ConstraintLayout>